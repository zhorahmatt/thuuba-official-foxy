---
// Basic Cards grid Section
// ------------
// Description: A grid of cards with basic contact information in a 4 column layout.
// Properties:
// - classes: Additional classes to be added to the Section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
// 	Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="requests" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">
				Shaping a future where technology drives <strong>success</strong> and <strong>innovation</strong>
			</h2>
			<p class="pb-0 text-lg">
				Thuuba Digital Indonesia is a pioneering software development company dedicated to driving digital 
				transformation for businesses and organizations. We specialize in delivering cutting-edge applications 
				and tailored digital solutions that empower our clients to excel in an ever-evolving digital landscape.
			</p>
		</Col>
	</Row>
</Section>
