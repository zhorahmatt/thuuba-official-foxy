---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-011.svg'
import highlight01mobile from '../../../assets/highlights/highlight-011-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-022.svg'
import highlight02mobile from '../../../assets/highlights/highlight-022-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-033.svg'
import highlight03mobile from '../../../assets/highlights/highlight-033-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-044.svg'
import highlight04mobile from '../../../assets/highlights/highlight-044-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Digital Transformation <strong>Strategy</strong>',
		text: 'Our team helps businesses modernize operations, improve efficiency, and achieve a competitive edge through technology',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: '<strong>Seamless</strong> Technology Solutions',
		text: 'We create Exceptional Mobile apps for iOS and Android, design seamless websites with outstanding functionality, and deliver e-commerce solutions that drive business growth. Our expert SEO services ensure your brand stands out with enhanced visibility and top search rankings.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>Tech </strong>Consulting & Strategy',
		text: 'Partnering with us means gaining access to a team of experienced professionals who understand the ever-evolving tech landscape. We provide tailored insights and actionable strategies to address your unique challenges and opportunities. Whether it’s optimizing your existing systems, adopting new technologies, or creating a roadmap for digital transformation, we’re here to guide you every step of the way. With our expertise, you can make informed decisions, streamline operations, and achieve sustainable growth in a competitive digital world.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: '<strong>Creative</strong> Storytelling & Digital Experiences',
		text: 'We are innovative storytellers dedicated to driving brand growth through tailored solutions, including Brand Development, intuitive UI/UX Design for seamless apps, engaging Content Creation, and powerful Motion & Videography crafted specifically for your brand',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]
---

<section class="mt-16 md:mt-16 mb-8">
  <h2 class="h2 text-center">Our Solutions</h2>
  <p class="basic-text text-center max-w-2xl mx-auto mb-8">
    We provide a comprehensive suite of digital solutions designed to help your business grow, innovate, and stay ahead in a rapidly changing world. Explore our core services below:
  </p>
</section>

{
  highlightBlocks.map((highlight, key) => (
    <TextImage
      id={`highlight-${key}`}
      title={highlight.title}
      text={highlight.text}
      image={highlight.image}
      imageWidth={highlight.imageWidth}
      imageHeight={highlight.imageHeight}
      mobileImage={highlight.mobileImage}
      imagePosition={highlight.imagePosition}
      classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
    />
  ))
}
