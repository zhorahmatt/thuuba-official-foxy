---
import { configData } from '../../../config/config'
// Home page CTA Section - AI-Enhanced Version
// ------------
// Description: A modern, AI-styled hero section with animated elements, gradients, and interactive components

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Button from '../../ui/Button.astro'
import AvatarGroup from '../../ui/AvatarGroup.astro'
import { Icon } from 'astro-icon/components'

// Content
// - Hero Image
import heroImage from '../../../assets/hero.png'
---

<Section id="intro" padding="top" classes="relative overflow-hidden bg-gradient-to-br from-neutral-50 via-white to-primary-50 dark:from-neutral-900 dark:via-neutral-800 dark:to-primary-950">
	

	<Row classes="relative z-10">
		<Col span="12" align="center" classes="mb-8">
			<!-- AI Badge -->
			<div class="inline-flex items-center px-4 py-2 rounded-full bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300 text-sm font-medium mb-6 backdrop-blur-sm border border-primary-200 dark:border-primary-800 animate-bounce">
				<span class="flex h-2 w-2 relative mr-2">
					<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
					<span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
				</span>
				AI-Powered Digital Solutions
			</div>
			
			<!-- Heading with Gradient Animation -->
			<h1 class="text-5xl md:text-6xl font-extrabold mb-6 tracking-tight">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-600 via-primary-500 to-primary-600 animate-pulse">Empowering Businesses</span>
				<br />
				Through <span class="relative inline-block">
					<span class="absolute inset-0 bg-primary-200 dark:bg-primary-800 opacity-20 blur-xl animate-pulse"></span>
					<span class="relative">Innovative AI</span>
				</span> Solutions
			</h1>

			<p class="pb-0 text-xl max-w-2xl mx-auto mb-8 text-neutral-600 dark:text-neutral-300">Transform your business with cutting-edge technology that adapts, learns, and evolves to meet your unique challenges</p>
			
			<!-- CTA Buttons -->
			<div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
				<Button size="lg" link={configData.consultationLink} classes="bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-500 hover:to-primary-600 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
					<div class="flex items-center gap-2">
						<Icon name="rocket" class="w-5 h-5" />
						Book a Consultation
					</div>
				</Button>
				<Button size="lg" style="secondary" link="/services" classes="backdrop-blur-sm bg-white/30 dark:bg-neutral-800/30 border border-neutral-200 dark:border-neutral-700 hover:bg-white/50 dark:hover:bg-neutral-800/50 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
					<div class="flex items-center gap-2">
						<Icon name="light-bulb" class="w-5 h-5" />
						Explore Solutions
					</div>
				</Button>
			</div>
			
			<!-- Social Proof -->
			<div class="flex items-center justify-center gap-3 text-sm text-neutral-600 dark:text-neutral-400">
				<span>Trusted by <strong>50+</strong> businesses</span>
			</div>
		</Col>
	</Row>
</Section>

<style>
@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}
</style>
