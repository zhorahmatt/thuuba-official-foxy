---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Feature from '../components/ui/Feature.astro'
import Button from '../components/ui/Button.astro'
import Highlight from '../components/ui/Highlight.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'

// Content
// - SEO
const SEO = {
	title: 'Thuuba | Our Philosophy - Building Bridges to Shared Success',
	description:
		"Discover Thuuba's philosophy of building sustainable collaborative bridges. We focus on balancing economic, social, and environmental benefits to create value for all stakeholders."
}

// - Philosophy Sections
const philosophyValues = [
	{
		title: 'Bridge to Success',
		icon: 'rocket',
		description: 'We serve as the bridge connecting your vision with optimal technological implementation. With us, you can achieve and enhance performance, benefits, and all objectives established from the outset.'
	},
	{
		title: 'Sustainable Collaboration',
		icon: 'user-group',
		description: 'We believe that long-term success can only be achieved through sustainable collaboration. By building mutually beneficial relationships, we create an ecosystem where all parties can grow together.'
	},
	{
		title: 'Value Balance',
		icon: 'scale',
		description: 'Beyond focusing on economic benefits, we prioritize positive impacts on people and the environment. We are committed to creating solutions that benefit all parties and maintain the sustainability of our collaborations.'
	}
]

const journeySteps = [
	{
		number: '01',
		title: 'The Beginning',
		description: 'Thuuba was born from a vision to create a technological bridge that not only generates business profits but also delivers positive impacts for society and the environment.'
	},
	{
		number: '02',
		title: 'Challenges & Learning',
		description: 'Every challenge we face becomes a valuable lesson that shapes our approach to providing holistic and sustainable technology solutions.'
	},
	{
		number: '03',
		title: 'Future Vision',
		description: 'We continue to innovate to create a digital ecosystem that supports business growth while ensuring positive impacts for all stakeholders.'
	}
]

const coreValues = [
	{
		icon: 'shield-check',
		title: 'Integrity',
		description: 'We uphold the highest ethical standards in all our interactions and business practices.'
	},
	{
		icon: 'bolt',
		title: 'Empowering',
		description: 'We strive to enable individuals and organizations to reach their full potential through our solutions and partnerships.'
	},
	{
		icon: 'arrow-path-rounded-square',
		title: 'Transformation',
		description: 'We facilitate meaningful change that creates lasting value and opens new possibilities for growth and development.'
	},
	{
		icon: 'light-bulb',
		title: 'Innovation',
		description: 'We constantly push boundaries to find creative solutions that address complex challenges.'
	},
]

const stats = [
	{ value: '10+', label: 'Years Experience' },
	{ value: '50+', label: 'Successful Collaborations' },
	{ value: '95%', label: 'Client Retention' },
	{ value: '100%', label: 'Commitment to Excellence' }
]
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section with Animated Background -->
	<section class="relative py-24 px-4 md:px-8 overflow-hidden">
		<!-- Animated Background Elements -->
		<div class="absolute inset-0 bg-gradient-to-br from-neutral-50 via-white to-primary-50 dark:from-neutral-900 dark:via-neutral-800 dark:to-primary-950 overflow-hidden">
			<div class="absolute top-0 left-0 w-full h-full opacity-10 dark:opacity-20">
				<div class="absolute top-1/4 left-1/4 w-64 h-64 rounded-full bg-primary-300 dark:bg-primary-700 blur-3xl animate-pulse"></div>
				<div class="absolute bottom-1/3 right-1/3 w-96 h-96 rounded-full bg-primary-200 dark:bg-primary-800 blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
				<div class="absolute top-2/3 left-1/2 w-48 h-48 rounded-full bg-primary-400 dark:bg-primary-600 blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
			</div>
			<!-- Grid Pattern Overlay -->
			<div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]" style="background-size: 30px 30px;"></div>
		</div>
		
		<div class="max-w-5xl mx-auto text-center relative z-10">
			<!-- Animated Badge -->
			<div class="inline-flex items-center px-4 py-2 rounded-full bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300 text-sm font-medium mb-6 backdrop-blur-sm border border-primary-200 dark:border-primary-800 animate-bounce">
				<span class="flex h-2 w-2 relative mr-2">
					<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
					<span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
				</span>
				Building Bridges to Shared Success
			</div>
			
			<h1 class="text-5xl md:text-6xl font-extrabold mb-6 tracking-tight">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-600 via-primary-500 to-primary-600 animate-pulse">Foundations of Excellence</span>
			</h1>
			<p class="text-xl text-neutral-600 dark:text-neutral-300 max-w-2xl mx-auto mb-12 leading-relaxed">
				At Thuuba, we believe in creating meaningful connections that transform visions into reality through sustainable collaboration and balanced value creation.
			</p>
			
			<!-- Call to Action Buttons -->
			<div class="flex flex-wrap justify-center gap-4">
				<Button size="lg" style="primary">Let's Collaborate</Button>
			</div>
		</div>
	</section>

	<!-- Our Philosophy Section with 3D Cards -->
	

	<!-- Our Journey Section with Timeline -->
	<!-- <section class="py-24 px-4 md:px-8 relative overflow-hidden">
		<div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-neutral-50 dark:from-primary-950 dark:via-neutral-900 dark:to-neutral-950 overflow-hidden">
			<div class="absolute inset-0 opacity-30 dark:opacity-20 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-primary-300 via-transparent to-transparent dark:from-primary-600"></div>
		</div>
		
